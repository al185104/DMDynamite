<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DMDynamite"
             x:Class="DMDynamite.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>


            <Color x:Key="Primary">#e32125</Color>
            <Color x:Key="Secondary">#f1b319</Color>
            <Color x:Key="Background">#ebcee2</Color>

            <Color x:Key="TextPrimary">#3c2c16</Color>
            <Color x:Key="TextSecondary">#4d4691</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
